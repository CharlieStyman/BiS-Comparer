<UserControl x:Class="BiSComparer.Views.SettingsView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:BiSComparer.Views"
			 mc:Ignorable="d" 
			 d:DesignHeight="300" d:DesignWidth="300">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>


		<TextBlock Grid.Row="0"
				   Text="Settings"
				   HorizontalAlignment="Center"
				   Margin="5"
				   Padding="5"/>

		<Grid Grid.Row="1">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>

				<TextBlock Grid.Column="0"
						   Text="Reset Obtained"
						   Margin="5"/>
				<CheckBox Grid.Column="1"
						  VerticalContentAlignment="Top"
						  Margin="5"
						  IsChecked="{Binding ResetObtained}">
					<TextBlock Text="If selected each loaded item will have it's 'Obtained' field set to false. Select this option the first time loading a character after it's raid difficulty has been changed."
							   TextWrapping="Wrap"
							   FontStyle="Italic"/>
				</CheckBox>
			</Grid>
		</Grid>
	</Grid>
</UserControl>
